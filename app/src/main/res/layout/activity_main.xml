<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/backggggg"
              tools:context="com.example.qiuchen.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_gravity="center"
        android:background="@mipmap/bbbbbackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_top"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="账号:"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/mUser"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="2"
                android:background="@mipmap/input"

                android:ems="10"
                android:gravity="center"
                android:hint="请输入账号"
                android:inputType="textPersonName"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"

                android:text="密码:"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="31dp"/>

            <EditText
                android:id="@+id/mPass"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="2"
                android:background="@mipmap/input"
                android:ems="10"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text=""/>
        </LinearLayout>

        <Button
            android:id="@+id/mLogin"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@mipmap/base"
            android:text="登    录"
            android:textSize="18sp"/>

        <ProgressBar
            android:id="@+id/mLoginProgressBar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>
